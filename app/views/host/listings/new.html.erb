<h1>List your shop or restaurant space</h1>

<!-- to catch errors -->
<% if flash[:errors]%>
  <% flash[:errors].each do |error| %>
    <%= error %>
  <%end %>
<%end%>

<form action="/host/listings" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label for="title">Title</label>
  <input type ="text" name="listing[title]" id="title" value="<%= @listing.title %>">

  <label for="about">About</label> 
 <textarea id="about" name="listing[about]"><%= @listing.about %></textarea>

<!-- div for address elements -->
<div data-controller="address">
  <label for = "address">Address</label>
  <input type ="text" id="address" autocomplete = "off">
</div> 

  <input type="submit" value="Create listing">
</form>
